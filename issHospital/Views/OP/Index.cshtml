@model IEnumerable<issHospital_Utility.DTOs.opDTO>
@{
    ViewBag.Title = "Index";
    ViewData["Title"] = "Opentry";
}
<br />
<br />

<style>
    .header {
        margin-top: 10px;
        border-top-style: solid;
        border-top-width: 5px;
        border-top-color: #ff5f04;
        font-family: Calibri;
        font-size: 22px;
    }

    .addNew {
        padding: 5px;
        background-color: #00bfff;
        color: white;
        float: right !important;
        margin: 10px;
        border-radius: 3px;
        text-decoration: none;
        width:10%;
        
    }


        .addNew:hover {
            text-decoration: none;
        }
</style>


    <div class="card mb-3">
         <div class="card-body">
             <div class="row flex-between-center">
                 <div class="col-sm-auto mb-2 mb-sm-0">
                     <h3 class="mb-0">
                         Out Patient Entry- Index page
                     </h3>
                 </div>
                 @Html.ActionLink("Add New", "Create", null, htmlAttributes: new { @class = "addNew btn btn-info" })

             </div>
         </div>
    </div>
<div style="overflow: auto; background-color: white; padding: 2%; border-radius: 6px;">
      
       
        <table class="table datatable-basic table-bordered table-striped table-hover" id="OpEntry" style="margin-top:10px;">
                 <thead>
                     <tr>
                         <th>Sno </th>
                         <th>OP No</th>
                         <th> Amount </th>
                         <th>Paid</th>
                         <th>Balance</th>
                         <th> Actions </th>
                     </tr>
                 </thead>
                 <tbody>
                     @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i + 1 }))
                     {


                         <tr>
                             <td>@item.Index</td>
                             <td>@item.Data.OpNo</td>
                             <td>
                                 
                                 @{
                                     long myNumber = @item.Data.Amount;
                                     System.Globalization.CultureInfo Indian = new System.Globalization.CultureInfo("hi-IN");
                                 }
                                 @(String.Format(Indian, "{0:N}", myNumber))
                             </td>
                             <td>@item.Data.PaidAmt</td>
                             <td>@item.Data.BalAmt</td>
                             <td>@item.Data.BalAmt</td>
                         </tr>


                      }
                 </tbody>
        </table>
</div>
<script src="~/Assets/js/jquery.min.js"></script>
        <script type="text/javascript">
            $(function () {
                $('#OpEntry').DataTable({
                    dom: 'Bfrtip',
                    paging: true,
                    buttons: [
                        'copy',
                        {
                            extend: 'excel',
                            title: function () {
                                var printTitle = 'OpEntry';
                                return printTitle
                            }
                            // messageTop: 'The information in this table is copyright to Sirius Cybernetics Corp.'
                        },
                        {
                            extend: 'pdf',
                            title: function () {
                                var printTitle = 'opEntry';
                                return printTitle
                            }
                            //  messageBottom: null
                        },
                        {
                            extend: 'print',
                            title: function () {
                                var printTitle = 'opEntry';
                                return printTitle
                            }
                        }

                    ]
                });
            });
        </script>



